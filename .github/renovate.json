{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base", ":disableDependencyDashboard"],
  "commitMessageAction": "Bump",
  "commitMessageExtra": "",
  "commitMessageSuffix": "from {{currentVersion}} to {{newVersion}}",
  "commitMessageTopic": "{{depName}}",
  "hostRules": [
    {
      "matchHost": "api.github.com",
      "token": "{{secrets.RENOVATE_GITHUB_COM_TOKEN}}",
      "authType": "Token-Only"
    }
  ],
  "customDatasources": {
    "github-release-assets": {
      "defaultRegistryUrlTemplate": "https://api.github.com/repos/{{packageName}}/releases/latest",
      "format": "json",
      "transformTemplates": ["{\"releases\": $.assets.{\"version\": name}}"]
    }
  },
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": ["/(^|/)\\.php-version$/"],
      "matchStrings": ["(?<currentValue>\\d+\\.\\d+(\\.\\d+)?)"],
      "depNameTemplate": "php",
      "lookupNameTemplate": "php/php-src",
      "datasourceTemplate": "github-releases",
      "extractVersionTemplate": "php-(?<version>\\d+\\.\\d+\\.\\d+?)"
    },
    {
      "customType": "regex",
      "managerFilePatterns": ["/(^|/)Dockerfile$/"],
      "matchStrings": ["ARG\\s*RABBITMQ_MESSAGE_DEDUPLICATION_VERSION=(?<currentValue>\\d+\\.\\d+\\.\\d+)"],
      "depNameTemplate": "rabbitmq-message-deduplication",
      "lookupNameTemplate": "noxdafox/rabbitmq-message-deduplication",
      "datasourceTemplate": "github-releases"
    },
    {
      "customType": "regex",
      "managerFilePatterns": ["/(^|/)Dockerfile$/"],
      "matchStrings": ["ARG\\s*RABBITMQ_MESSAGE_DEDUPLICATION_FILENAME=(?<currentValue>.+)"],
      "depNameTemplate": "rabbitmq-message-deduplication-filename",
      "lookupNameTemplate": "noxdafox/rabbitmq-message-deduplication",
      "datasourceTemplate": "custom.github-release-assets",
      "versioningTemplate": "regex:^plugins-rmqv(?<major>\\d+)\\.(?<minor>\\d+)\\.(?:(?<patch>\\d+|x))(-.*)?\\.zip$"
    },
    {
      "customType": "regex",
      "managerFilePatterns": ["/(^|/)rust-toolchain\\.toml$/"],
      "matchStrings": ["channel\\s*=\\s*\"(?<currentValue>\\d+\\.\\d+(\\.\\d+)?)\""],
      "depNameTemplate": "rust",
      "lookupNameTemplate": "rust-lang/rust",
      "datasourceTemplate": "github-tags"
    }
  ],
  "packageRules": [
    {
      "matchDepNames": ["go", "golang"],
      "groupName": "go",
      "minimumGroupSize": 2
    },
    {
      "matchDepNames": ["node"],
      "groupName": "node",
      "minimumGroupSize": 2
    },
    {
      "matchDepNames": ["php"],
      "groupName": "php",
      "minimumGroupSize": 2
    },
    {
      "matchDepNames": ["rabbitmq-message-deduplication", "rabbitmq-message-deduplication-filename"],
      "groupName": "rabbitmq-message-deduplication"
    },
    {
      "matchDepNames": ["rust"],
      "groupName": "rust",
      "minimumGroupSize": 2
    }
  ]
}
